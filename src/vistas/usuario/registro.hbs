<div class="container fondo-registro">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                    <!-- Background image for card set in CSS! -->
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Registro</h5>
                    <form action="/usuario/registro" method="POST" class="form-signin">
                        <div class="form-label-group">
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" value="{{nombre}}" required autofocus>
                            <label for="nombre">Nombre</label>
                        </div>

                        <div class="form-label-group">
                            <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellido" value="{{apellido}}">
                            <label for="apellido">Apellido</label>
                        </div>
                        
                        <div class="form-label-group">
                            <input type="text" class="form-control" id="dni" name="dni" placeholder="DNI" value="{{dni}}">
                            <label for="dni">DNI</label>
                        </div>

                        <div class="form-label-group">
                            <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion" value="{{direccion}}">
                            <label for="direccion">Direccion</label>
                        </div>
 
                        <div class="form-label-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{email}}" required>    
                            <label for="email">E-Mail</label>
                        </div>
                        <hr>
                        <div class="form-label-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Contrase単a" value="{{password}}" required>
                            <label for="password">Contrase単a</label>
                        </div>
                        
                        <div class="form-label-group">
                            <input type="password" class="form-control" id="confimarpassword" name="confimarpassword" placeholder="Confirmar Contrase単a" value="{{confimarpassword}}" required>                        
                            <label for="cofirmarpassword">Confirmar Contrase単a</label>
                        </div>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Registrarse</button>                      
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit" disabled><i class="fa fa-envelope mr-2" ></i> Registrarse con Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit" disabled><i class="fa fa-facebook mr-2" ></i> Registrarse con Facebook</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

