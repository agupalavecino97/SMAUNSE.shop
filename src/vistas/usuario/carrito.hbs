{{#if productos}}
    <div class="container" style="margin-top: 20px">
        <div class="card">
            <table class="table table-hover">
                <thead class="text-muted">
                    <tr>
                        <th scope="col" >Producto</th>
                        <th scope="col" width="120">Cantidad</th>
                        <th scope="col" width="120">Precio Unitario</th>
                        <th scope="col" width="120">Subtotal</th>
                        <th scope="col" width="120"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>
                            <figure class="media">
                                <div style="width: 200px; height: 200px;">
                                    <img src="/img/productos/{{nombre}}.jpg" style="width: 100px; height: 100px;">
                                </div>
                                <figcaption class="media-body">
                                    <h6 class="title text-truncate">{{nombre}}</h6>
                                </figcaption>
                            </figure>
                        </td>
                        <td>
                            <form action="/usuario/carrito/modificar/{{id}}" method="POST">
                                <input type="number" class="form-control" name="cantidad" min="1" step="1" value="{{cantidad}}"> 
                                <button type="submit" class="btn btn-outline-warning" class="btn-sm"> Aplicar</button>           
                            </form>
                        </td>
                        <td>
                            <h4 class="title"> $ {{precio_venta}}</h4>
                        </td>
                        <td>
                            <h4 class="title"> $ {{subtotal}}</h4>
                        </td>
                        <td>
                            <form action="/usuario/carrito/eliminar/{{id}}" method="POST">
                                <input name="monto" type="hidden" value="{{monto}}">
                                 <input name="subtotal" type="hidden" value="{{subtotal}}">
                                <button type="submit" class="btn btn-outline-danger" class="btn-sm"> Eliminar</button>
                            </form>          
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table> 
            <hr>
            <div class="ml-auto p-3">
                <h4>Total: $ {{monto}}</h4>
            </div>
        </div>
        <div style="margin-top:10px; margin-left:1000px"> 
            <a href="/usuario/envio_pago" type="submit" class="btn btn-lg btn-primary text-uppercase">Comprar</a>
        </div> 
    </div>
 

{{else}}
    <div class="row">
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">Aun no hay productos cargados al carrito</p>
            </div>
        </div>
    </div>
{{/if}}